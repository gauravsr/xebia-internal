<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:s="library://ns.adobe.com/flex/spark" 
					  width="100%"
					  height="5%">
	
	<fx:Declarations>
		<s:RadioButtonGroup id="content"/>
	</fx:Declarations>
	
	<s:layout>
		<s:HorizontalLayout verticalAlign="middle"/>
	</s:layout>
	
	<fx:Script>
		<![CDATA[
			
			public function reset():void {
				content.selection = null;
			}
			
		]]>
	</fx:Script>
	
	<s:Label text="Content: "
			 left="5"
			 top="10"/>
	
	<s:HGroup gap="30"
			  width="100%"
			  horizontalAlign="right">
		<s:RadioButton label="1"
					   groupName="content"/>
		<s:RadioButton label="2"
					   groupName="content"/>
		<s:RadioButton label="3"
					   groupName="content"/>
		<s:RadioButton label="4"
					   groupName="content"/>
		<s:RadioButton label="5"
					   groupName="content"/>
	</s:HGroup>
</s:SkinnableContainer>